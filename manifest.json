{
  "manifest_version": 3,
  "name": "视频速度控制器",
  "version": "1.0",
  "description": "控制任何网页视频的播放速度",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 